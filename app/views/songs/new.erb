<form action="/songs" method="post">
  <label>Name:</label>
  <input type="text" id="Name" name="song[name]">

  <h3>Create New Artist</h3>
  <label>Artist Name:</label>
  <input type="text" id="Artist Name" name="artist[name]">

  <h3>Select Genre</h3>
  <label>Genres:</label>
  <% @genres.each do |genre| %>
    <input type="checkbox" id="<%= genre.name %>" value="<%= genre.id %>" name="genres[]">

  <% end %>

  <input type="submit" value="Create">

</form>
