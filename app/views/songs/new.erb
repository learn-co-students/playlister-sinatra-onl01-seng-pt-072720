<h1>Create a new Song</h1>

<form action="/songs" method="POST">
  <label for="Name">Name:</label>
  <input type="text" id="Name" name="song[name]">
  <br>
  <label for="Artist Name">Artist:</label>
  <input type="text" id="Artist Name" name="artist[name]">
  <br>
  <label for="genre[name]">Select Genre:</label><br>
  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %><br>
  <% end %>
  <br>

  <input type="submit" id="Create" name="Create" value="Create">
</form>