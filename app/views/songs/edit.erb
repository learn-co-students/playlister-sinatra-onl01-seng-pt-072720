<h3>Update <%= @song.name %></h3>
<form method="POST" action="/songs/<%= @song.slug %>">
    <input type="hidden" id="hidden" name="_method" value="patch">

    <label for="song_name">Name</label>
    <input type="text" id="song_name" name="song[name]" value="<%= @song.name %>"><br>

    <label for="artist_name">Artist Name</label>
    <input type="text" id="artist_name" name="artist[name]" value="<%= @song.artist.name %>"><br>

    <label>Update Genre(s)</label>
    <% Genre.all.each do |genre| %>
        <input type="checkbox" name="song[genre_ids][]" id="<%= genre.name %>" value="<%= genre.id %>"><%= genre.name %><br>
    <% end %>
    
    <br><br>
    <input type="submit" value="Save">
</form>