<h1>Edit a new Song</h1>

<form action="/songs/<%= @song.slug %>" method="POST">
  <input type="hidden" id="hidden" name="_method" value="PATCH"></input>
  <label>Name</label><input type="text" name="song[name]" id="Name" value ="<%= @song.name %>"><br>
  <label>Artist Name</label><input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"><br>
  <label>Genres</label><br>
  <% @genres.each do |genre| %>
    <input id="<%= genre.name %>" type="checkbox" name="genres[]" value="<%= genre.id %>"><%= genre.name %><br>
  <% end %>
  <br><br>
  <input type="submit" value="Save">
</form>